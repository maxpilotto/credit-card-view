<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CreditCardView">
        <!-- Card background for when the number is not known -->
        <attr name="genericCardBackground" format="color|reference"/>
        <!-- Card background for when the number belongs to Visa -->
        <attr name="visaCardBackground" format="color|reference"/>
        <!-- Card background for when the number belongs to Mastercard -->
        <attr name="mastercardCardBackground" format="color|reference"/>
        <!-- Card background for when the number belongs to American Express -->
        <attr name="americanExpressCardBackground" format="color|reference"/>
        <!-- Card background for when the number belongs to Diners Club -->
        <attr name="dinersClubCardBackground" format="color|reference"/>
        <!-- Card background for when the number belongs to Discover -->
        <attr name="discoverCardBackground" format="color|reference"/>
        <!-- Card background for when the number belongs to JCB -->
        <attr name="jcbCardBackground" format="color|reference"/>
        <!-- Card background for when the number belongs to China UnionPay -->
        <attr name="chinaUnionpayCardBackground" format="color|reference"/>
        <!-- Text color of the labels -->
        <attr name="labelsTextColor" format="color|reference"/>
        <!-- Text value of the card holder's label -->
        <attr name="cardHolderLabel" format="string"/>
        <!-- Text value of the expiry's label -->
        <attr name="cardExpiryLabel" format="string"/>
        <!-- Card logo for when the number is not known -->
        <attr name="genericCardLogo" format="reference"/>
        <!-- Card logo for when the number belongs to Visa -->
        <attr name="visaCardLogo" format="reference"/>
        <!-- Card logo for when the number belongs to Mastercard -->
        <attr name="mastercardCardLogo" format="reference"/>
        <!-- Card logo for when the number belongs to American Express -->
        <attr name="americanExpressCardLogo" format="reference"/>
        <!-- Card logo for when the number belongs to Diners Club -->
        <attr name="dinersClubCardLogo" format="reference"/>
        <!-- Card logo for when the number belongs to Discover -->
        <attr name="discoverCardLogo" format="reference"/>
        <!-- Card logo for when the number belongs to JCB -->
        <attr name="jcbCardLogo" format="reference"/>
        <!-- Card logo for when the number belongs to China UnionPay -->
        <attr name="chinaUnionpayCardLogo" format="reference"/>
        <!-- Number of characters to which the card number is divided, spaces will be added between the character groups
            E.g. groupSize = 2, number = "123456", result = "12 34 56" -->
        <attr name="cardNumberGroupSize" format="integer"/>
        <!-- Back view magnetic strip color -->
        <attr name="magneticStripColor" format="color|reference"/>
        <!-- Text color for all the errors TextViews -->
        <attr name="errorColor" format="reference|color"/>
        <!-- Flip the card when the CVV is being edited -->
        <attr name="flipOnCVVEdit" format="boolean"/>
        <!-- Flip the card when any of the front data is being edited -->
        <attr name="flipOnFrontDataEdit" format="boolean"/>
        <!-- Allows errors report, you need to setup a listener if you want to be able to see errors
             Disabled by default -->
        <attr name="errorsEnabled" format="boolean"/>
        <!-- Visibility level of the CVV -->
        <attr name="cvvVisibility" format="enum">
            <enum name="show" value="0"/>
            <enum name="hide" value="1"/>
        </attr>
        <!-- Length of the card number -->
        <attr name="digits" format="integer"/>
        <!-- Flipped value, False means that the front side is showing, True means that the back side is showing -->
        <attr name="flipped" format="boolean"/>
        <!-- Character that replaces the card number's characters when they are hidden -->
        <attr name="hideChar" format="string"/>
        <!-- Allows the card to flip when it's pressed, True to enable, False otherwise
             By default it's disabled -->
        <attr name="flipOnClick" format="boolean"/>
        <!-- Visibility level of the card number -->
        <attr name="numberVisibility" format="enum">
            <enum name="show" value="0"/>
            <enum name="showLastFour" value="1"/>
            <enum name="hide" value="2"/>
        </attr>

        <!-- Card number value, the number shouldn't have spaces -->
        <attr name="cardNumber" format="string"/>
        <!-- Expiry value, the string shouldn't have spaces,dashes or slashes since the slash is automatically added -->
        <attr name="expireDate" format="string"/>
        <!-- Card holder value, it can be anything -->
        <attr name="cardHolder" format="string"/>
        <!-- CVV value, max length 3 -->
        <attr name="cvv" format="string"/>

        <!-- Card number text color -->
        <attr name="numberColor" format="color|reference"/>
        <!-- Card holder text color -->
        <attr name="cardHolderColor" format="color|reference"/>
        <!-- Expiry text color -->
        <attr name="expireDateColor" format="color|reference"/>
        <!-- CVV text color -->
        <attr name="cvvColor" format="color|reference"/>

        <!-- Card number hint text value -->
        <attr name="numberHint" format="string"/>
        <!-- Card holder hint text value -->
        <attr name="cardHolderHint" format="string"/>
        <!-- Expiry hint text value -->
        <attr name="expireDateHint" format="string"/>
        <!-- CVV hint text value -->
        <attr name="cvvHint" format="string"/>

        <!-- Card number hint text color -->
        <attr name="numberHintColor" format="color|reference"/>
        <!-- Card holder hint text color -->
        <attr name="cardHolderHintColor" format="color|reference"/>
        <!-- Expiry hint text color -->
        <attr name="expireDateHintColor" format="color|reference"/>
        <!-- CVV hint text color-->
        <attr name="cvvHintColor" format="color|reference"/>
    </declare-styleable>
</resources>