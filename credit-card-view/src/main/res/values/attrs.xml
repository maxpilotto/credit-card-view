<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CreditCardView">
        <!-- Number on the card's front -->
        <attr name="number" format="string" />

        <!-- Holder name on the card's front -->
        <attr name="holder" format="string" />

        <!-- Expiration date on the card's back -->
        <attr name="expiry" format="string" />

        <!-- CVV number, located on the back of the card -->
        <attr name="cvv" format="string" />

        <!-- Format used to display the credit card's number,
             take a look at the NumberFormat class for more info
        -->
        <attr name="numberFormat" format="string" />

        <!-- XML file containing the fillers used for the credit card's number,
             take a look at the Filler class for more info on how to use them and how to write the
             XML file
         -->
        <attr name="numberFillers" format="reference" />

        <!-- XML file containing the fillers used for the credit card's cvv,
             take a look at the Filler class for more info on how to use them and how to write the
             XML file
        -->
        <attr name="cvvFillers" format="reference" />

        <!-- Color of the cvv's text -->
        <attr name="cvvTextColor" format="color" />

        <!-- Hint of the number's TextView -->
        <attr name="numberHint" format="string" />

        <!-- Text of the error below the number's view -->
        <attr name="numberError" format="string" />

        <!-- Hint of the holder's TextView -->
        <attr name="holderHint" format="string" />

        <!-- Text of the label above the holder's view -->
        <attr name="holderLabel" format="string" />

        <!-- Text of the error below the holder's view -->
        <attr name="holderError" format="string" />

        <!-- If true this will automatically add a "/" after the second digit of the expiry, enabled by default -->
        <attr name="autoFormatExpiry" format="boolean" />

        <!-- Hint of the expiry's TextView -->
        <attr name="expiryHint" format="string" />

        <!-- Text of the label above the expiry's view -->
        <attr name="expiryLabel" format="string" />

        <!-- Text of the error below the expiry's view -->
        <attr name="expiryError" format="string" />

        <!-- Hint of the cvv's TextView -->
        <attr name="cvvHint" format="string" />

        <!-- Text of the error below the cvv's view -->
        <attr name="cvvError" format="string" />

        <!-- Size of the cvv's text, this will override the textSize only for the cvv -->
        <attr name="cvvSize" format="dimension" />

        <!-- Flipped value, False means that the front side is showing, True means that the back side is showing -->
        <attr name="flipped" format="boolean" />

        <!-- Flips the card when it's clicked, disabled by default -->
        <attr name="flipOnClick" format="boolean" />

        <!-- Flips the card when the fields on the card are being edited, disabled by default -->
        <attr name="flipOnEdit" format="boolean" />

        <!-- Text color for all texts that are not labels or errors -->
        <attr name="textColor" />

        <!-- Text color for all hints -->
        <attr name="hintColor" />

        <!-- Text color for all labels -->
        <attr name="labelColor" format="color" />

        <!-- Text color for all errors -->
        <attr name="errorColor" format="color" />

        <!-- Size of all texts that are not labels or errors -->
        <attr name="textSize" />

        <!-- Size of all labels' texts -->
        <attr name="labelSize" format="dimension" />

        <!-- Size of all errors' texts -->
        <attr name="errorSize" format="dimension" />

        <!-- Size of the number's text, this will override the textSize only for the number -->
        <attr name="numberSize" format="dimension" />

        <!-- Card front background -->
        <attr name="frontBackground" format="reference|color" />

        <!-- Card back background -->
        <attr name="backBackground" format="reference|color" />

        <!-- Card front logo -->
        <attr name="frontLogo" format="reference" />

        <!-- Card back logo -->
        <attr name="backLogo" format="reference" />

        <!-- Size of the logo on the front of the card -->
        <attr name="frontLogoSize" format="dimension" />

        <!-- Size of the logo on the back of the card -->
        <attr name="backLogoSize" format="dimension" />

        <!-- Cvv background -->
        <attr name="cvvBackground" format="reference|color" />

        <!-- Sign strip background -->
        <attr name="signStripBackground" format="reference|color" />

        <!-- Magnetic strip background -->
        <attr name="magneticStripBackground" format="reference|color" />

        <!-- Amex card style -->
        <attr name="amexStyle" format="reference" />

        <!-- Diners Club card style -->
        <attr name="dinersStyle" format="reference" />

        <!-- Discover card style -->
        <attr name="discoverStyle" format="reference" />

        <!-- Generic card style -->
        <attr name="genericStyle" format="reference" />

        <!-- JCB card style -->
        <attr name="jcbStyle" format="reference" />

        <!-- Maestro card style -->
        <attr name="maestroStyle" format="reference" />

        <!-- Mastercard card style -->
        <attr name="mastercardStyle" format="reference" />

        <!-- Unionpay card style -->
        <attr name="unionpayStyle" format="reference" />

        <!-- Visa card style -->
        <attr name="visaStyle" format="reference" />
    </declare-styleable>
</resources>